{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "nuxt-i18n",
      "vue-apollo/types",
      "@nuxtjs/auth",
      "@types/nuxtjs__auth",
      "@types/vue-clickaway",
      "reflect-metadata"
    ],
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
